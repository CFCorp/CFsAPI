{% extends 'base.html.twig' %}

{% block body %}
    <div class="nav-container">
        <span id="menu-icon"></span>
        <h1 class="nav-title">welcome {{ app.user.getUsername()|default('') }} </h1>
        <div id="navside" class="sidenav">
            <span class="closebtn">&times;</span>
            <a href="{{ path('homepage') }}" class="current">Home</a>
            {% if not is_granted('ROLE_ADMIN') %}
                <a href="{{ path('login') }}">Login</a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                <a href="{{ path('stats') }}">stats</a>
            {% endif %}
            <a href="{{ path('anime') }}">Anime</a>
            <a href="{{ path('hentai') }}">Hentai</a>
            <a href="{{ path('dva') }}">D.VA</a>
            <a href="{{ path('trap') }}">Trap</a>
            <a href="{{ path('hug') }}">Hug</a>
            <a href="{{ path('baguette') }}">Baguette</a>
            {% if is_granted('ROLE_ADMIN')%}
                <a href="{{ path('Uploader') }}">Uploader</a>
                <a href="{{ path('animeUploader') }}">Anime Uploader</a>
                <a href="{{ path('hentaiUploader') }}">Hentai Uploader</a>
                <a href="{{ path('dvaUploader') }}">D.VA Uploader</a>
                <a href="{{ path('trapUploader') }}">Trap Uploader</a>
                <a href="{{ path('hugUploader') }}">Hug Uploader</a>
                <a href="{{ path('baguetteUploader') }}">Baguette Uploader</a>
                <a href="{{ path('logout') }}">Logout</a>
            {% endif %}
        </div>
        <script>
            let navside = document.getElementById('navside');
            document.getElementById("menu-icon").onclick = function() { navside.style.width = "250px"; }
            document.getElementsByClassName("closebtn")[0].onclick = function() { navside.style.width = "0"; }
        </script>
    </div>
    <section class="fullscreen">
        <div class="center-object">
            <div class="table-container table-center center">
                <section class="me">
                    <h1 class="title">CFs API</h1>
                    <span class="undertitle">get a random anime | hentai | d.va | trap | hug pic</span>
                    <h1>Here you can find all the current endpoints</h1>
                    <section class="comment-section ">
                        <div class="comment-container center">
                            <div class="text">
                                <h1 class="author">GET</h1>
                                <span class="comment">{{ path('anime') }} | {{ path('hentai') }} | {{ path('dva') }} | {{ path('trap') }} | {{ path('hug') }} | {{ path('baguette') }}</span>
                            </div>
                        </div>
                    </section>
                </section>
            </div>
            <div class="buttons">
                <a href="{{ path("anime") }}" class="btn animation pomegranate" target="_blank">Anime</a>
                <a href="{{ path("hentai") }}" class="btn animation pomegranate" target="_blank">Hentai</a>
                <a href="{{ path("dva") }}" class="btn animation pomegranate" target="_blank">D.VA</a>
                <a href="{{ path("trap") }}" class="btn animation pomegranate" target="_blank">Trap</a>
                <a href="{{ path("hug") }}" class="btn animation pomegranate" target="_blank">Hug</a>
                <a href="{{ path("baguette") }}" class="btn animation pomegranate" target="_blank">Baguette</a>
            </div>
            <br><span class="center-text">
                <p>There are at the moment {{ anime }} anime images, {{ hentai }} hentai images, {{ dva }} D.VA images, {{ trap }} trap images, {{ hug }} hug, {{ baguette }} baguette images</p>
            </span>
        </div>
    </section>

{% endblock %}

{% block stylesheets %}
    <meta name="og:title" content="CFs API">
    <meta name="og:description" content="a small API that sends anime/hentai images in JSON">
    <meta name="og:image" content="{{ asset('https://computerfreaker.cf/profile/profile.png') }}">
    <meta name="og:url" content="https://api.computerfreaker.cf">
    <link href="https://modesta.alexflipnote.xyz/css/modesta.min.css" type="text/css" rel="stylesheet">
    <style>

        body { background: #000000; font: 18px/1.5 sans-serif;}
        h1, h2 { line-height: 1.2; margin: 0 0 .5em;}
        .center-object h1 { font-size: 20px; }
        h2 { font-size: 21px; margin-bottom: 1em; }
        p { font-size: 20px;}
        a { color: #0000F0; }
        a:hover { text-decoration: none; }
    </style>
{% endblock %}
