{% extends 'base.html.twig' %}
{% block body %}
    <section class="me">
        <h1 class="title">CFs API</h1>
        <h1>Here you can find all the current endpoints</h1>
        <section class="comment-section ">
            <div class="comment-container center">
                <div class="text">
                    <h1 class="author">GET</h1>
                    <span class="comment">{{ path('categories') }} | {{ path('anime') }} | {{ path('hentai') }} | {{ path('dva') }} | {{ path('trap') }} | {{ path('hug') }} | {{ path('baguette') }} |
                        {{ path('neko') }} | {{ path('nsfwneko') }}
