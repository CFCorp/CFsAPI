{% extends 'base.html.twig' %}
{% block body %}
    <section class="me">
        <section class="comment-section ">
            <div class="comment-container center">
                <div class="text">
                    <h1 class="author">your user token is: {{ userToken }}</h1>
                </div>
            </div>
        </section>
        <span class="center-text">
            <p>if you wanna logout click this button: <a href="{{ path("logout") }}" class="btn animation pomegranate" target="_blank">logout</a></p>
        </span>
    </section>


{% endblock %}

{% block stylesheets %}
    <meta name="og:title" content="CFs API">
    <meta name="og:description" content="a small API that sends anime/hentai images in JSON">
    <meta name="og:image" content="{{ asset('Image/profile.png') }}">
    <meta name="og:url" content="https://api.computerfreaker.cf">
    <link href="https://modesta.alexflipnote.xyz/css/modesta.min.css" type="text/css" rel="stylesheet">
    <style>

        body { font: 18px/1.5 sans-serif;
            overflow-y: hidden;
            overflow-x: hidden;
        }
        h1, h2 { line-height: 1.2; margin: 0 0 .5em;}
        .center-object h1 { font-size: 20px; }
        .comment { font-size: 15px;}
        h2 { font-size: 21px; margin-bottom: 1em; }
        p { font-size: 20px;}
        a { color: #0000F0; }
        a:hover { text-decoration: none; }
    </style>
{% endblock %}

